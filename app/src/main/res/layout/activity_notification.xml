<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.agenda.ter.smartgenda.NotificationActivity"
    android:background="#e8f0f5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Nom de la notification "
                android:id="@+id/textView2"
                android:height="20dp"
                android:textSize="20dp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:hint="Enter le nom"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="57dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code couleur"
                android:id="@+id/textView3"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sonnerie"
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:layout_marginRight="30dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chercher"
                android:id="@+id/button4"
                android:background="#cce0ef" />

        </LinearLayout>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Rappels"
            android:id="@+id/textView5"
            android:layout_weight="0.04"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:id="@+id/listView"
            android:layout_marginBottom="10dp"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_weight="0.29"
            android:background="@color/dim_foreground_disabled_material_dark"
            android:layout_marginBottom="10dp"
            >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nouveau rappel"
                        android:id="@+id/textView7"
                        android:textSize="20dp"
                        android:layout_marginRight="150dp" />

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="37dp"
                        android:text="+"
                        android:id="@+id/button2"
                        android:height="5dp"
                        android:width="5dp"
                        android:background="#b0c429"
                        android:typeface="monospace"
                        android:textStyle="bold"
                        android:textSize="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:id="@+id/textView6"
                        android:textSize="18dp"
                        android:layout_marginRight="40dp"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ajouter"
                        android:id="@+id/button" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heure"
                        android:id="@+id/textView8"
                        android:textSize="18dp"
                        android:layout_marginRight="40dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/editText2" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregister"
            android:id="@+id/button3"
            android:background="#b0c429" />

    </LinearLayout>

</RelativeLayout>
