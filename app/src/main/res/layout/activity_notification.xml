<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agenda.ter.smartgenda.NotificationActivity"
    android:background="#e8f0f5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:padding="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Nom de la notification "
                android:id="@+id/nom_notif_id"
                android:height="20dp"
                android:textSize="20dp"
                android:layout_weight="1"

                />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_nomNotif_id"
            android:hint="Enter le nom"
            android:layout_marginBottom="10dp"

            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="57dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code couleur"
                android:id="@+id/textView_code_couleur_id"
                android:textSize="20dp"

                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sonnerie"
                android:id="@+id/textView_sonnerie_id"
                android:textSize="20dp"
                android:layout_marginRight="30dp"
                android:layout_weight="5"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chercher"
                android:id="@+id/button_chercher_id"
                android:background="#cce0ef"
                android:layout_weight="5"
                />

        </LinearLayout>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Rappels"
            android:id="@+id/textView_rappel_id"
            android:layout_weight="0.1"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"

            />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:id="@+id/listView_id"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.15"

            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_weight="0.58"
            android:background="@color/dim_foreground_disabled_material_dark"
            android:layout_marginBottom="10dp"
            >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="36dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.85"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/calendar_page_title_text_view_id"

                        android:gravity="center_vertical"
                        android:text="Nouveau Rappel"
                        android:textSize="20dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/calendar_add_event_image_desc"
                        android:layout_weight="0.15"
                        android:text="@string/add"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:id="@+id/add_event_button_id"
                        android:layout_gravity="center_vertical"
                        android:background="#b0c429"
                        android:textAlignment="center"
                        android:onClick="AddToList" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/date_event_textview"
                        android:id="@+id/date_even_textview_id" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:hint="@string/date_picker_textview"
                        android:id="@+id/datepicker_textview_id" />

                    <ImageButton
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:background="@mipmap/calendar_icon"
                        android:onClick="showDatePicker"

                        android:id="@+id/date_even_butonimage_id" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heure"
                        android:id="@+id/textView_heure_id"
                        android:textSize="18dp"
                        android:layout_marginRight="40dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/editText_heure_id" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregister"
            android:id="@+id/button_enregister_id"
            android:background="#b0c429" />

    </LinearLayout>

</RelativeLayout>
